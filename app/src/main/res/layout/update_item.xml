<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:background="@drawable/angryimg_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:padding="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Customar Deatils Update"
                android:textSize="20dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/text_shadow_white"
            android:textColorHint="@color/text_shadow_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:textStyle="bold"
                android:textColor="@color/text_shadow_white"
                android:id="@+id/cust_deatils_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Deatils:"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/text_shadow_white"
            android:textColorHint="@color/text_shadow_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true">

            <EditText
                android:textStyle="bold"
                android:textColor="@color/text_shadow_white"
                android:id="@+id/cust_nid_card_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NID Card Number:"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:hintTextColor="@color/text_shadow_white"
            android:textColorHint="@color/text_shadow_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:focusable="true">

            <EditText
                android:textStyle="bold"
                android:textColor="@color/text_shadow_white"
                android:id="@+id/cust_pon_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="phon Number:"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <info.hoang8f.widget.FButton
            android:id="@+id/Update_dataSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:text="Update"
            android:textSize="20dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/Update_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:text="Exite"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
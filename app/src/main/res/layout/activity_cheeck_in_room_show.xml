<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Cheeck_inRoomShow">

    <androidx.cardview.widget.CardView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/checkin_card_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:elevation="12dp">
        <EditText
            android:drawableLeft="@drawable/ic_search"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Search Your Room No"
            android:textSize="18sp"
            android:id="@+id/Check_in_edit_search"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
         android:layout_below="@id/checkin_card_search"
        android:id="@+id/recycler_check_inroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

  </RelativeLayout>
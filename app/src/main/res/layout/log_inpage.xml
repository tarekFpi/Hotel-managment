<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="12dp"
    android:elevation="12dp"
    app:cardElevation="10dp"
    tools:context=".Log_inPage">
   <LinearLayout
      android:gravity="center"
       android:padding="8dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <ProgressBar
           android:id="@+id/log_progrss_id"
           android:visibility="invisible"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/Widget.AppCompat.ProgressBar.Horizontal"
           android:indeterminate="true"
           android:indeterminateTint="#2763C8"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:textSize="23dp"
               android:text="Log IN "
               android:textAlignment="center"
               android:textStyle="bold"
               android:textColor="@color/colorPrimary"/>

       <ImageView
           android:layout_marginTop="10dp"
           android:layout_gravity="center"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/log_image"/>
       <LinearLayout
           android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <com.google.android.material.textfield.TextInputLayout
               android:textColor="#10100E"
               android:textColorHint="#10100E"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusableInTouchMode="true"
               android:focusable="true"
               app:boxCornerRadiusBottomEnd="16dp"
               app:boxCornerRadiusBottomStart="18dp"
               app:boxCornerRadiusTopEnd="16dp"
               app:boxCornerRadiusTopStart="16dp"
               app:boxStrokeColor="#EAE5E8"
                >
               <EditText
                   android:id="@+id/logIn_gmail"
                   android:inputType="textEmailAddress"
                   android:textColor="#10100E"
                   android:textColorHint="#10100E"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Email"
                   android:textStyle="bold"
                   android:textSize="18sp"/>
           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:textColor="#10100E"
               android:textColorHint="#10100E"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:focusableInTouchMode="true"
               android:focusable="true"
               app:boxCornerRadiusBottomEnd="16dp"
               app:boxCornerRadiusBottomStart="18dp"
               app:boxCornerRadiusTopEnd="16dp"
               app:boxCornerRadiusTopStart="16dp"
               app:boxStrokeColor="#EAE5E8"
               app:passwordToggleEnabled="true"
               app:passwordToggleTint="@color/text_shadow_white"
               android:layout_marginTop="10dp">

               <EditText
                   android:textColor="#10100E"
                   android:textColorHint="#10100E"
                   android:id="@+id/logIn_pass"
                   android:inputType="textPassword"

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Password"
                   android:textStyle="bold"
                   android:textSize="18sp"/>
           </com.google.android.material.textfield.TextInputLayout>
           <CheckBox
               android:id="@+id/check_id"
               android:padding="4dp"
               android:background="@color/text_shadow_white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                 android:text="Remember Me"/>
           <info.hoang8f.widget.FButton
               android:onClick="log_in_data"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:layout_marginTop="30dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="@color/text_shadow_white"
               android:text="Log In"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <androidx.cardview.widget.CardView
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="12dp"
               app:cardElevation="12dp"
               android:elevation="12dp">

               <TextView
                   android:id="@+id/log_to_signUP"
                   android:padding="3dp"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/fbutton_color_midnight_blue"
                   android:textStyle="bold"
                   android:textSize="18dp"
                   android:text="Do't Have an Account ?? Sign Up"/>

           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </LinearLayout>




</androidx.cardview.widget.CardView>
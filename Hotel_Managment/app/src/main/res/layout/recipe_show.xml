<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"
    app:cardElevation="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/restaurant"
            android:id="@+id/recip_showImage"/>

        <TextView
        android:textColor="#171716"
        android:layout_below="@id/recip_showImage"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/recipe_show_name"/>


        <TextView
            android:textColor="#171716"
            android:layout_below="@+id/recipe_show_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deatils:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/recipe_show_deatils"/>

        <TextView
            android:layout_above="@+id/recipe_quantity"
           android:textColor="#A600FF"
            android:layout_alignBaseline="@id/recipe_show_deatils"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recipe_show_deatils"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price:"
            android:textSize="22sp"
            android:textStyle="bold"
            android:id="@+id/recipe_showprice"/>

        <TextView
            android:textColor="#00AEFF"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/recipe_show_deatils"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/recipe_quantity"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>